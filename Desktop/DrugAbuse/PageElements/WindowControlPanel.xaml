<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="DrugAbuse.WindowControlPanel"
	x:Name="UserControl"
	Width="Auto"
	Height="auto">

	<Grid x:Name="LayoutRoot">
		<Rectangle Fill="{DynamicResource GUIColor-Background}" Width="Auto"/>

		<Viewbox Height="Auto" HorizontalAlignment="Right" VerticalAlignment="Top">
		<StackPanel Orientation="Horizontal">

			
			<Button x:Name="Button_Minimize" Style="{DynamicResource ButtonMinimize}" Margin="0,0,20,0" Height="Auto"
			Click="OnClickMinimized"/>

			<Button x:Name="Button_Maximize" Style="{DynamicResource ButtonMaximize}" Margin="0,0,20,0" Height="Auto"
			Click="OnClickMaximize"/>

			<Button x:Name="Button_Close" Style="{DynamicResource ButtonClose}" Margin="0,0,0,0" Height="Auto"
			Click="OnClickClose"/>

		</StackPanel>
		</Viewbox>
		
	</Grid>
</UserControl>