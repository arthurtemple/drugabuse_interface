<Window x:Class="DrugAbuse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviours="clr-namespace:Microsoft.Expression.Interactivity.Core;assembly=Microsoft.Expression.Interactions"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        Title="DrugAbuse"
        xmlns:local="clr-namespace:DrugAbuse"
        WindowStartupLocation="CenterScreen"
		AllowsTransparency="True"
        WindowStyle="None"
		Width="800" Height="600"
		MinWidth="620" MinHeight="500"
		ResizeMode="CanResizeWithGrip"
        >
	<Window.DataContext>
		<local:PdfViewModel/>
	</Window.DataContext>
    
    <Grid x:Name="LayoutRoot" Background="#3c3c3b" Focusable="False">

		<Border BorderBrush="#FF161616" BorderThickness="1" Focusable="False">
        	<local:PageTransition x:Name="pageTransitionControl" Margin="5" Focusable="False"/>
		</Border>
    </Grid>
    
</Window>
